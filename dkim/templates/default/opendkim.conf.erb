Syslog      yes
LogWhy      yes
UMask       002

<% selector = node[:dkim][:selector] -%>
Domain      <%= node[:dkim][:domains].join(',') %>
KeyFile     /etc/mail/<%= selector %>.private
Selector    <%= selector %>

OmitHeaders "."
SignHeaders "."

InternalHosts <%= node[:postfix][:mail_relay_networks].join(',') %>
